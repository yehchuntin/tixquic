
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is an admin
    function isAdmin() {
      return request.auth != null && request.auth.token.email != null &&
             (request.auth.token.email.matches('.*admin.*') ||
              request.auth.token.email == '2017yehchunting@gmail.com');
    }

    // Helper function to check if the requesting user is the owner of the document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Rules for the 'events' collection
    match /events/{eventId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Rules for the 'userEventVerifications' collection
    match /userEventVerifications/{verificationId} {
      // Users can read their own verification documents
      allow read: if isOwner(resource.data.userId);
      // Users can create their own verification documents
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // Users can update their own verification documents (for preferences)
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;
      // Generally, users should not delete their verification records directly
      allow delete: if false; // Or restrict to admins: if isAdmin();
    }
  }
}

    